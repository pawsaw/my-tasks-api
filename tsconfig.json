{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  